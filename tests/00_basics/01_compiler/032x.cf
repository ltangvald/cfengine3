######################################################
#
#  Issue 375
#
#####################################################
body common control
{
  inputs => { "../../default.cf" };
  bundlesequence  => { g, default("$(this.promise_filename)") };   
  version => "1.0";
nova_edition::
  host_licenses_paid => "5";
}

bundle common g
{
vars:
	"testfile" string => "/tmp/TEST.cfengine";
}

#######################################################

bundle agent init
{
files:
	"$(g.testfile)"
	    delete => init_delete;
}

body delete init_delete
{
	dirlinks => "delete";
	rmdirs   => "true";
}

#######################################################

bundle agent test
{
files:
	"$(g.testfile)"
	    create => "banana";
}

#######################################################

bundle agent check
{
classes:
    "ok" not => fileexists("$(g.testfile)");

reports:
    DEBUG::
	"This test should fail";
    ok::
	"$(this.promise_filename) Pass";
    !ok::
	"$(this.promise_filename) FAIL";
}

#######################################################

bundle agent fini
{
methods:
        "any" usebundle => default_fini("$(g.testfile)");
}
