bundle agent mydisks
{
storage:

  "/site/department/vol1"

                     mount  => mymount("hostname","/mnt/point"),
                     volume => mycheck("10%");

}

#####################################################################

body mount mymount(host,dir)  # reusable template
{
mount_fs      => "nfs";
mount_point   => $(dir);
mount_server  => $(dir);
mount_options => { "rw", "bg"};
}

######################################################################

body checkvolume mycheck(free)   # reusable template

{
check_foreign  => "false";
freespace      => "$(free)";
sensible_size  => "10000";
sensible_count => "2";

Wednesday.Hr00::

  scan_arrivals   =>"true";
}