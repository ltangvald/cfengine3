#######################################################
#
# Disabling / rotating files
#
#######################################################

body common control
   {
   any::

      bundlesequence  => { 
                         "testbundle"
                         };
   }


############################################

bundle agent testbundle

{
files:

  "/home/mark/tmp/test_create" 

      comment => "this rule does something",
      rename => disable;

  "/home/mark/tmp/rotateme"

      rename => rotate("4");
}

############################################

body rename disable

{
disable => "true";
disable_suffix => "_blownaway";
}

############################################

body rename rotate(level)

{
rotate => "$(level)";
}
